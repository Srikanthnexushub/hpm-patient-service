# ============================================================
# HPM Patient Service — Environment Variables
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# ============================================================

# ---- Application ----
APP_NAME=patient-service
SERVER_PORT=8081

# ---- Docker port mappings (host:container) ----
# Use unique host ports to avoid conflicts with other local services
SERVICE_HOST_PORT=8081
DB_HOST_PORT=5435

# ---- Database (REQUIRED — no defaults for URL/user/pass) ----
# For docker compose: DB_URL uses the service name "patient-db" as host
# For local Maven run: DB_URL uses localhost and DB_HOST_PORT
DB_NAME=hpm_patient_db
DB_URL=jdbc:postgresql://localhost:5435/hpm_patient_db
DB_USERNAME=hpm_patient_user
DB_PASSWORD=<CHANGE_ME>

# ---- Database Connection Pool ----
DB_POOL_MIN_IDLE=5
DB_POOL_MAX_SIZE=20
DB_POOL_CONN_TIMEOUT_MS=30000
DB_POOL_IDLE_TIMEOUT_MS=600000
DB_POOL_MAX_LIFETIME_MS=1800000

# ---- JPA / SQL Logging (set true for local debug only) ----
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# ---- Swagger (disable in production) ----
SWAGGER_ENABLED=true

# ---- Logging ----
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING_WEB=WARN
LOG_LEVEL_SQL=WARN

# ---- Actuator ----
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_HEALTH_DETAILS=when-authorized
